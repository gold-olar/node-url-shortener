      const calendar = document.querySelector("#expiry_date");
      const tomorrow = new Date();
      tomorrow.setDate(tomorrow.getDate() + 1);
      calendar.setAttribute('min', tomorrow.toISOString().split('T')[0]);
    });
  </script>
